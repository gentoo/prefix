# /usr/bin/wxrc
#
#  a lame wxrc wrapper (bugs to wxwidgets@gentoo.org)

_wxerror() {
	cat >&2 <<- EOF
		An error occurred while calling wxrc:

		${1}

		Please use \`eselect wxwidgets\` to select an available profile and try again.
	EOF
	exit 1
}

if [ -n "${WX_ECLASS_CONFIG}" ]; then
	$(${WX_ECLASS_CONFIG} --utility=wxrc) "$@"
	exit 0
else
	if [ -e "@GENTOO_PORTAGE_EPREFIX@"/var/lib/wxwidgets/current ]; then
		. "@GENTOO_PORTAGE_EPREFIX@"/var/lib/wxwidgets/current
	else
		_wxerror "Cannot find the wxWidgets profile configuration ( @GENTOO_PORTAGE_EPREFIX@/var/lib/wxwidgets/current )"
	fi

	[ -z "${WXCONFIG}" -o "${WXCONFIG}" = none ] && _wxerror "No profile currently selected"

	if [ -x "@GENTOO_PORTAGE_EPREFIX@"/usr/lib/wx/config/${WXCONFIG} ]; then
	   $("@GENTOO_PORTAGE_EPREFIX@"/usr/lib/wx/config/${WXCONFIG} --utility=wxrc) "$@"
	else
		_wxerror "Cannot find wxWidgets profile ( ${WXCONFIG} )"
	fi
	exit 0
fi

